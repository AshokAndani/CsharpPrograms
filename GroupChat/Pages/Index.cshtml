@page
    <div class="container">
        <div class="row">
            <h1 class="text-center">Welcome to Group Chat Application...!😃</h1>
            <hr />
            <div class="col-6 col-lg-offset-3">
                <label for="group-name" class="control-label col-3">GroupName</label>
                <input type="text" name="group-name" id="group-name" style="
                       width:200px; margin-top:10px" class=" input-prepend" placeholder="Type a group name" />
                <input type="button" id="leave-group" class="btn btn-danger input-append" value="Leave Group" />
            </div>
            <hr />
            <div class="col-6">&nbsp;</div>
            <div class="col-6">
                <ul id="messagesList"></ul>
            </div>
            <hr  />
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-6">&nbsp;</div>
            <div class="col-6 col-lg-offset-2">
                <form class="form-inline">
                    <div class="input-prepend input-append">
                        <input type="text" name="group-message" style="width:450px; height:50px" class="form-control" id="group-message-text" placeholder="Type a message" />
                        <input type="button" id="groupmsg" class="btn btn-success" value="Send to Group"/>
                        <input type="button" id="join-group" class="btn btn-info" value="Join Group" />
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <hr />
            </div>
        </div>

    </div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
