@page
<h1 class="text-center text-white-50 text-success">Welcome</h1>
<div class="container bg-transparent">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-3">&nbsp;</div>
        <div class="col-6">
            Enter the UserName<input type="text" id="userInput" class="form-control" />
            Enter the Message<input type="text" id="messageInput" class="form-control" /><br />
            <input type="button" id="sendButton" value="Send" class="btn btn-info btn-block" />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-3">&nbsp;</div>
        <div class="col-4">
            <div class="border-dark">
            <ul id="messagesList" class="list-group-item-dark"></ul></div>
        </div>
    </div>
</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>